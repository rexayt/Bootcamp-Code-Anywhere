programa
{
	
	funcao inicio()
	{
		inteiro contador, limite, resultado, usuario

		contador = 0
		limite = 10
		escreva("Digite a tabuada que deseja fazer: ")
		leia(usuario)

		faca{
			resultado = usuario * contador
			escreva(usuario+" X "+ contador +  " = " + resultado + "\n")
			contador++	
		}enquanto(contador<= limite)
	}
}
